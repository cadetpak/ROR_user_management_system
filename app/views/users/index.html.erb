<h3>All Users</h3>
<table border="1">
  <thead>
    <tr>
      <td>First Name</td>
      <td>Last Name</td>
      <td>Email</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
  <!-- loops through each 'user' from @users -->
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email_address %></td>
      <td> <a href="/users/<%= user.id %>">Show</a> | <a href="/users/<%= user.id %>/edit">Edit</a> | 
        <form action="/users/<%= user.id %>" method="post">
          <input type='hidden' name="authenticity_token" value="<%= form_authenticity_token %>">
          <!-- NOTE the _method, delete: this allows DELETE to be the method in ROUTES without conflicting with restful route rules -->
          <input type='hidden' name='_method' value='delete'> 
          <input type="submit" value="Destroy">
        </form> </td>
    </tr>
  <% end %>  
  </tbody>
</table>

<a href="/users/new">New User</a>